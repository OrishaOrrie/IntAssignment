              <br>
              <div id="outsentence" class="outsentence" style="display:none"></div>
            </form>
          </div>
    </body>

    <SCRIPT LANGUAGE="JavaScript">
      function testResults (form) {
          var TestVar = form.inputbox.value;
          var T = document.getElementById("outsentence");
          T.style.display = "block";  // <-- Set it to block
          var mapObj = {
            Microsoft:"Microsoft" + "\u00A9",
            Oracle:"Oracle" + "\u00A9",
            Google:"Google" + "\u00A9",
            Amazon: "Amazon" + "\u00A9",
            Deloitte: "Deloitte"  + "\u00A9",
            microsoft:"Microsoft" + "\u00A9",
            oracle:"Oracle" + "\u00A9",
            google:"Google" + "\u00A9",
            amazon: "Amazon" + "\u00A9",
            deloitte: "Deloitte"  + "\u00A9"
          };
          TestVar = TestVar.replace(/Microsoft|Google|Oracle|Amazon|Deloitte|microsoft|google|oracle|amazon|deloitte/gi, function(matched){
            return mapObj[matched];
          });
          //alert(TestVar);
          document.getElementById('outsentence').innerHTML = TestVar;

      }
