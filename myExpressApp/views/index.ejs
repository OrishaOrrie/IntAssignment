    <body>

          <div class="mainassign">
            <h2>Enter a sentence</h2>
            <form>
              <div class="inputbx" >
                <input type="text" name="inputbox" required="">
                <label>Sentence</label>
              </div>
  
              <a href="#"> 
                <span></span>
                <span></span>
                <input class="button button1" Value="Submit" onClick="testResults(this.form)">
                <span></span>
                <span></span>
              
              </a>
